#Configurar o Vim como Editor Padrão do Terminal no ~/.bashrc#

	export EDITOR=vim
	export VISUAL=vim

#Configurar a Entrada Padrao de Texto do Terminal no ~/.inputrc#

	set editing-mode vi
	set keymap vi-command 

#Configurar o Folding do Vim no ~/.vimrc#

  	set foldmethod=syntax

#Configurar Numero de Linha do Vim no ~/.vimrc#

	:set number
	:set relativenumber

#Configurar Identação do Vim no ~/.vimrc#

	:set autoindent
	:set tabstop=4
	:set softtabstop=0
	:set shiftwidth=4

#Configurar Folding Syntax do HTML do Vim no ~/.vim/after/syntax/html.vim#

	syntax region htmlFold start="<\z(\<\(area\|base\|br\|col\|command\|embed\|hr\|img\|input\|keygen\|link\|meta\|para\|source\|track\|wbr\>\)\@![a-z-]\+\>\)\%(\_s*\_[^/]\?>\|\_s\_[^>]*\_[^>/]>\)" end="</\z1\_s*>" fold transparent keepend extend containedin=htmlHead,htmlH\d

#Configurar Folding Syntax do PHP do Vim no ~/.vimrc#

	:let php_folding = 1
	:let php_htmlInStrings = 1
	:let php_sql_query = 1
	:let php_noShortTags = 1

#Configurar o phpMyAdmin em /etc/phpmyadmin/Config.inc.php#

    $cfg['Servers'][$i]['auth_type'] = 'config';
	$cfg['Servers'][$i]['AllowNoPassword'] = TRUE;

#Ativar o OmniComplete no ~/.vimrc#

	:filetype plugin on
	:set omnifunc=syntaxcomplete#Complete
	:set completeopt=longest,menuone
	:set completeopt+=preview

#Instalar o T-Mux e o XClip

	sudo apt install tmux xclip -y
